                            @Html.DropDownList("HomeAddressSubZone", null, htmlAttributes: new { @class = "city form-control", @style = "width: 100%" })
                        </div>
                        <div class="form-group">
                            @Html.EditorFor(model => model.HomeAddress.Description, new { htmlAttributes = new { @placeholder = "Address Description" }, @type = "text" })
                        </div>
