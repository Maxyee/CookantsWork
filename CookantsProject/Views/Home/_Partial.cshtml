@model CookantsEntity.Model.SecurityUser
<script src="~/Areas/AdminBlock/Content/js/jquery-1.8.2.min.js"></script>
<script>
            $(function () {


                $('#HomeAddressArea').change(function () {
                    var selectedOptionId = $(this).val();
                    console.log(selectedOptionId);
                    $("#Stack").val(selectedOptionId);
                    $('#HomeAddressSubZone').empty();

                    $.ajax({
                        type: "POST",
                        url: "/Home/GetSubZoneByBusinessAreaId",
                        datatype: "Json",
                        data: { BusinessAreaId: selectedOptionId },
                        success: function (data) {

                            $.each(data, function (Create, value) {
                                $('#HomeAddressSubZone').append('<option value="' + value.Id + '">' + value.Name + '</option>');
                            });
                        }
                    });
                });

            });
            $("#HomeAddressArea").change(function () {
                var selectedOptionId = $(this).val();
                alert(selectedOptionId);
                $("#Stack").val(selectedOptionId); //Set the selected value to textbox
             });
</script>
